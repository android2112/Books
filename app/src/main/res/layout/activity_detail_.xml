<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".Detail_Activity">
    <ProgressBar
        android:id="@+id/simpleProgressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"/>


    <ImageView
        android:id="@+id/imageview"
        android:layout_width="105dp"
        android:layout_height="135dp"
        android:layout_alignParentStart="true" />

    <ImageView
        android:id="@+id/pin_favorite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageview"
        android:layout_marginEnd="-120dp"
        android:layout_toStartOf="@+id/casaeditrice"
        android:src="@drawable/ic_action_name"
        android:visibility="gone"
        />

    <CheckBox
        android:id="@+id/check_box_favorite"
        android:layout_width="85dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/imageview"
        android:text="@string/favoriti" />

    <TextView
        android:id="@+id/testo"
        android:layout_width="250dp"
        android:layout_height="67dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="42dp"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/autore"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imageview"
        android:layout_marginStart="8dp"
        android:layout_toEndOf="@+id/imageview"
        android:textSize="20dp"/>

    <TextView
        android:id="@+id/casaeditrice"
        android:layout_width="262dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="120dp"
        android:layout_marginTop="121dp"
         />

    <TextView
        android:id="@+id/descrizione"
        android:layout_width="314dp"
        android:layout_height="246dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="29dp"
        android:layout_marginTop="170dp"
         />

<TextView
    android:layout_marginBottom="10dp"
    android:id="@+id/info"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="@string/info"
    android:layout_below="@id/descrizione"
    android:layout_marginTop="20dp"
    android:gravity="center"
    android:textStyle="bold"/>

    <TextView
        android:layout_marginBottom="10dp"
        android:layout_marginRight="5dp"
        android:id="@+id/rautore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/autore"
        android:layout_below="@id/info"/>

    <TextView
        android:id="@+id/autoreinfo"
        android:layout_width="274dp"
        android:layout_height="wrap_content"
        android:focusable="false"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/info"
        android:layout_marginEnd="34dp" />

<TextView
    android:id="@+id/pag"
    android:text="@string/pagine"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@id/rautore"

    />


    <TextView
        android:id="@+id/paginenum"
        android:layout_width="272dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="-214dp"
        android:layout_toStartOf="@+id/testo" />



</RelativeLayout>
</ScrollView>
</FrameLayout>